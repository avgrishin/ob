<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <title>@ViewBag.Title</title>
  @Styles.Render("~/Content/bootstrap")
  <style>
    @@font-face {
      font-family: 'Segoe UI Light';
      src: url('/fonts/segoe-ui/cyrillic/light/latest.eot');
      src: url('/fonts/segoe-ui/cyrillic/light/latest.eot?#iefix') format('embedded-opentype'), url('/fonts/segoe-ui/cyrillic/light/latest.woff') format('woff'), url('/fonts/segoe-ui/cyrillic/light/latest.ttf') format('truetype'), url('http://i.s-microsoft.com/fonts/segoe-ui/cyrillic/light/latest.svg#web') format('svg');
      font-weight: 100;
      font-style: normal;
    }

    html, body, h1, h2, h3, h4, h5, h6, .h1, .h2, .h3, .h4, .h5, .h6 {
      font-family: "Segoe UI", Verdana,Arial,Helvetica,sans-serif;
    }

    h1, h2 {
      font-family: "Segoe UI Light";
      /*margin-top: 10px;*/
    }

    label {
      font-weight: normal;
    }

    .form-control {
      border-radius: 0;
      box-shadow: none;
    }

    .btn {
      border-radius: 0;
    }

    .input-validation-error {
      border-color: #a94442;
      -webkit-box-shadow: inset 0 1px 1px rgba(0, 0, 0, .075);
      box-shadow: inset 0 1px 1px rgba(0, 0, 0, .075);
    }

      .input-validation-error:focus {
        border-color: #843534;
        -webkit-box-shadow: inset 0 1px 1px rgba(0, 0, 0, .075), 0 0 6px #ce8483;
        box-shadow: inset 0 1px 1px rgba(0, 0, 0, .075), 0 0 6px #ce8483;
      }

    .div-head {
      background-color: #337ab7;
      border-bottom: 3px solid #fbd91f;
      color: white;
    }
  </style>
  @Styles.Render("~/Content/css")
  @RenderSection("css", required: false)
</head>
<body>
  <header>
    <div id="header" style="background-color:#333;height:80px">
      <div class="float-left">
        <a class="logo" href="@Url.Action("Index", "Home", new { area = "" })">
        </a>
      </div>
      <div class="float-right">
        <section id="login">
          Логин: <span class="username">@User.Identity.Name</span>
        </section>
        <nav>
          <ul id="menu">
            @if (User.IsInRole("Admin"))
            {
              <li>@Html.ActionLink("Админ", "Index", "Admin", new { area = "" }, new { })</li>
            }
            <li>@Html.ActionLink("About", "About", "Home", new { area = "" }, new { })</li>
          </ul>
        </nav>
      </div>
    </div>
  </header>
  <div id="body">
    @RenderSection("featured", required: false)
    <section class="content-wrapper main-content clear-fix container-fluid">
      @RenderBody()
    </section>
  </div>
  <footer></footer>
  @Scripts.Render("~/bundles/jquery")
  @*@Scripts.Render("~/bundles/jqueryui")*@
  @Scripts.Render("~/bundles/bootstrap")
  @RenderSection("scripts", required: false)
</body>
</html>
